<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BtMenu" TargetType="Button">
        <Setter Property="Background" Value="#416BE0"></Setter>
        <Setter Property="Foreground" Value="#fff"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate  TargetType="Button">
                    <Border BorderBrush="White"  CornerRadius="5" Margin="5" BorderThickness="1.5" Height="40"  Background="{TemplateBinding Background}" >
                        <ContentPresenter  VerticalAlignment="Center" HorizontalAlignment="Center">
                            
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#7000FF"></Setter>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="False">
                <Setter Property="Background" Value="#416BE0"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>